#include <iostream>
#include <string>
using namespace std;

void test_strung1()
{
	string s1;
	string s2("hello world");
	string s3(s2, 1, 3);
	string s4(s3);
	s3 += "big";
	cout << s3 << endl;
	cout << s1 << endl;
	cout << s2 << endl;
	cout << s2.size() << endl;
	cout << s2.capacity() << endl;
	 s2.clear() ;
	cout << s2.capacity() << endl;
	cout << s2.empty() << endl;
	s2.reserve(1000);
	cout << s2.capacity() << endl;
	s2.resize(100);
	cout << s2.capacity ()<< endl;
	string::iterator it = s2.begin();
	while (it != s2.end())
	{
		*it -= 1;
		++it;
	}
	 it = s2.begin();
	 
	 
	while (it != s2.end())
	{
		cout << *it << " ";
		++it;
	}
	cout << endl;
}
int main()
{
	test_strung1();
	return 0;
}
